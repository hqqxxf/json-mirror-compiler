{
  "include": ["src/**/*.ts"],
  "exclude": ["src/__tests__/**"],
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "module": "umd",
    "sourceMap": true,
    "declaration": true,
    "removeComments": true,
    "outDir": "lib",
    "baseUrl": "./"
  }
}