{
  "name": "json-mirror-compiler",
  "version": "0.1.0",
  "description": "json mirror compiler",
  "keywords": [
    "mirror",
    "json-pointer"
  ],
  "author": "cxtom <cxtom2008@gmail.com>",
  "license": "ISC",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/max-team/json-mirror-compiler.git"
  },
  "scripts": {
    "build": "tsc && mkdir lib/php/runtime && cp src/php/runtime/MirrorUtil.php lib/php/runtime/",
    "test": "jest"
  },
  "dependencies": {
    "js-yaml": "^3.13.1",
    "json5": "^2.1.0",
    "lodash": "^4.17.11",
    "ts-morph": "^2.3.0",
    "typescript": "~3.4.5"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-transform-modules-commonjs": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.5.0",
    "@types/fs-extra": "^7.0.0",
    "@types/jest": "^24.0.13",
    "@types/json5": "0.0.30",
    "@types/node": "^12.0.12",
    "commitizen": "^3.0.7",
    "conventional-changelog": "^3.1.3",
    "conventional-changelog-cli": "^2.0.12",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.3.1",
    "jest": "^24.8.0",
    "jest-config": "^24.8.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.2.0"
  },
  "jest": {
    "verbose": true,
    "preset": "ts-jest/presets/js-with-babel",
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*\\.(test|spec))\\.(ts|js)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/__tests__/"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": [
      "src/**.ts"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
